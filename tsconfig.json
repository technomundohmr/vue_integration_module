{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "types": ["webpack-env", "node"]
    },
    "include": [
        "js/src/**/*",
        "src/**/*.ts",
        "src/**/*.vue"
    ],
    "exclude": [
      "node_modules"
    ]
  }